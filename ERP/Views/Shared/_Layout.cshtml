<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ERP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ERP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="basicInformation" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                基本資料管理
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="basicInfoDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="BasicInformation" asp-controller="MyCompany" asp-action="Upsert">公司基本資料</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="BasicInformation" asp-controller="Stock" asp-action="Index">倉庫清單</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="BasicInformation" asp-controller="Supplier" asp-action="Index">廠商清單</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="BasicInformation" asp-controller="Category" asp-action="Index">商品分類</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="BasicInformation" asp-controller="Product" asp-action="Index">商品清單</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="basicInformation" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                採購物流
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="basicInfoDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="Purchase" asp-controller="Inventory" asp-action="Index">庫存清單</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Purchase" asp-controller="PurchaseOrder" asp-action="Index">進貨單</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ERP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
