@model PurchaseOrderVM

<div class="">
    <h2 class="">@(Model.PurchaseOrder.PurchaseOrderId == 0 ? "新增" : "修改")進貨單</h2>
    <form class="py-3" method="post" enctype="multipart/form-data">
        <input asp-for="PurchaseOrder.PurchaseOrderId" hidden />
        <input asp-for="PurchaseOrder.PurchaseOrderNumber" hidden />
        <input asp-for="PurchaseOrder.Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        @if (Model.PurchaseOrder.PurchaseOrderId != 0)
        {
            <div class="form-group mb-4">
                <label asp-for="PurchaseOrder.PurchaseOrderNumber"></label>
                <input asp-for="PurchaseOrder.PurchaseOrderNumber" type="text" class="form-control" placeholder="" />
                <span asp-validation-for="PurchaseOrder.PurchaseOrderNumber" class="text-danger"></span>
            </div>
        }
        <div class="form-group mb-4">
            <label asp-for="PurchaseOrder.SupplierId"></label>
            <select asp-for="PurchaseOrder.SupplierId" asp-items="@Model.SupplierList" class="form-select">
                <option disabled selected>請選擇廠商</option>
            </select>
            <span asp-validation-for="PurchaseOrder.SupplierId" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PurchaseOrder.SupplierDeliverOrder"></label>
            <input asp-for="PurchaseOrder.SupplierDeliverOrder" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="PurchaseOrder.SupplierDeliverOrder" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PurchaseOrder.OrderDate"></label>
            <input asp-for="PurchaseOrder.OrderDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="PurchaseOrder.OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PurchaseOrder.TotalPrice"></label>
            <input asp-for="PurchaseOrder.TotalPrice" type="number" class="form-control" />
            <span asp-validation-for="PurchaseOrder.TotalPrice" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
            <a asp-area="Purchase" asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-secondary">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}