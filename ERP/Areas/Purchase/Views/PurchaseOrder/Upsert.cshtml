@model PurchaseOrderVM

<div>
    <form class="py-3" method="post">
        <input asp-for="PurchaseOrder.PurchaseOrderId" hidden />
        <input asp-for="PurchaseOrder.PurchaseOrderNumber" hidden />
        <input asp-for="PurchaseOrder.Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="row">
            <div class="col-6">
                <h2 class="">@(Model.PurchaseOrder.PurchaseOrderId == 0 ? "新增" : "修改")進貨單</h2>
            </div>
            <div class="col-6 text-end">
                <div>
                    <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
                    <a asp-area="Purchase" asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-secondary">取消</a>
                </div>
            </div>
        </div>
        @if (Model.PurchaseOrder.PurchaseOrderId != 0)
        {
            <div class="form-group mb-4">
                <label asp-for="PurchaseOrder.PurchaseOrderNumber"></label>
                <input asp-for="PurchaseOrder.PurchaseOrderNumber" type="text" class="form-control" placeholder="" />
                <span asp-validation-for="PurchaseOrder.PurchaseOrderNumber" class="text-danger"></span>
            </div>
        }
        <div class="row">
            <div class="col-6">
                <div class="form-group mb-4">
                    <label asp-for="PurchaseOrder.SupplierId"></label>
                    <select asp-for="PurchaseOrder.SupplierId" asp-items="@Model.SupplierList" class="form-select">
                        <option disabled selected>請選擇廠商</option>
                    </select>
                    <span asp-validation-for="PurchaseOrder.SupplierId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-4">
                    <label asp-for="PurchaseOrder.SupplierDeliverOrder"></label>
                    <input asp-for="PurchaseOrder.SupplierDeliverOrder" type="text" class="form-control" placeholder="" />
                    <span asp-validation-for="PurchaseOrder.SupplierDeliverOrder" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PurchaseOrder.OrderDate"></label>
            <input asp-for="PurchaseOrder.OrderDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="PurchaseOrder.OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PurchaseOrder.TotalPrice"></label>
            <input asp-for="PurchaseOrder.TotalPrice" type="number" class="form-control" />
            <span asp-validation-for="PurchaseOrder.TotalPrice" class="text-danger"></span>
        </div>
    </form>
</div>
<div>
    <form asp-area="Purchase" asp-controller="PurchaseDetail" asp-action="Create" class="py-3" method="post">
        <input asp-for="PurchaseDetailVM.PurchaseDetail.PurchaseOrderId" value="@Model.PurchaseOrder.PurchaseOrderId" hidden />
        <input asp-for="PurchaseDetailVM.PurchaseDetail.Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div>
            <h4>進貨單明細</h4>
        </div>
        <div class="row">
            <div class="col-4">
                <div class="form-group mb-4">
                    <label asp-for="PurchaseDetailVM.PurchaseDetail.ProductId"></label>
                    <select asp-for="PurchaseDetailVM.PurchaseDetail.ProductId" asp-items="@Model.PurchaseDetailVM.ProductList" class="form-select">
                        <option disabled selected>請選擇商品</option>
                    </select>
                    <span asp-validation-for="PurchaseDetailVM.PurchaseDetail.ProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group mb-4">
                    <label asp-for="PurchaseDetailVM.PurchaseDetail.Cost"></label>
                    <input asp-for="PurchaseDetailVM.PurchaseDetail.Cost" type="text" class="form-control" placeholder="" />
                    <span asp-validation-for="PurchaseDetailVM.PurchaseDetail.Cost" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group mb-4">
                    <label asp-for="PurchaseDetailVM.PurchaseDetail.Quantity"></label>
                    <input asp-for="PurchaseDetailVM.PurchaseDetail.Quantity" type="number" class="form-control" />
                    <span asp-validation-for="PurchaseDetailVM.PurchaseDetail.Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">新增</button>
        </div>
    </form>
</div>
<div>
    <div class="table-responsive py-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>NO.</th>
                    <th>商品名稱</th>
                    <th>進貨成本</th>
                    <th>進貨數量</th>
                    <th>小計</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var obj in Model.PurchaseDetailList.OrderBy(u => u.PurchaseDetailId))
                {
                    <tr>
                        <td>@index</td>
                        <td>@obj.Product.Name</td>
                        <td>@obj.Cost</td>
                        <td>@obj.Quantity</td>
                        <td>@obj.SubTotal</td>
                        <td>
                            <form asp-area="Purchase" asp-controller="PurchaseDetail" asp-action="Delete" asp-route-id="@obj.PurchaseDetailId" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger">刪除</button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
                <tr>
                    <td colspan="6">
                        總金額 : @(ViewBag.SumSubPrice ?? 0) 元
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}