@model Supplier

<div class="card-body">
    <h2 class="card-title">@(Model.SupplierId == 0 ? "新增" : "修改")廠商基本資料</h2>
    <form class="py-3" method="post">
        <input asp-for="SupplierId" hidden />
        <input asp-for="Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TaxId"></label>
            <input asp-for="TaxId" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="TaxId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telephone"></label>
            <input asp-for="Telephone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Fax"></label>
            <input asp-for="Fax" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Fax" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson"></label>
            <input asp-for="ContactPerson" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="ContactPerson" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactPhone"></label>
            <input asp-for="ContactPhone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="ContactPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactEmail"></label>
            <input asp-for="ContactEmail" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="text" class="form-control" placeholder=""></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
            <a asp-area="Purchase" asp-controller="Supplier" asp-action="Index" class="btn btn-light btn-fw m-3">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}