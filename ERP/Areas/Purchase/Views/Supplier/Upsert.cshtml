@model Supplier

<div class="card-body">
    <h2 class="card-title">@(Model.SupplierId == 0 ? "新增" : "修改")廠商基本資料</h2>
    <form class="py-3" method="post">
        <input asp-for="SupplierId" hidden />
        <input asp-for="TimeSet" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="form-group">
            <label asp-for="SupplierName"></label>
            <input asp-for="SupplierName" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierTaxId"></label>
            <input asp-for="SupplierTaxId" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierTaxId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierTel"></label>
            <input asp-for="SupplierTel" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierTel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierFax"></label>
            <input asp-for="SupplierFax" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierFax" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierEmail"></label>
            <input asp-for="SupplierEmail" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierAddress"></label>
            <input asp-for="SupplierAddress" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierContactPerson"></label>
            <input asp-for="SupplierContactPerson" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierContactPerson" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierContactTel"></label>
            <input asp-for="SupplierContactTel" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierContactTel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierContactCellPhone"></label>
            <input asp-for="SupplierContactCellPhone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierContactCellPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierContactEmail"></label>
            <input asp-for="SupplierContactEmail" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="SupplierContactEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierDescription"></label>
            <textarea asp-for="SupplierDescription" type="text" class="form-control" placeholder="" ></textarea>
            <span asp-validation-for="SupplierDescription" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
            <a asp-area="Purchase" asp-controller="Supplier" asp-action="Index" class="btn btn-light btn-fw m-3">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}