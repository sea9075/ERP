@model ProductVM

<div class="card-body">
    <h2 class="card-title">@(Model.Product.ProductId == 0 ? "新增" : "修改")商品基本資料</h2>
    <form class="py-3" method="post" enctype="multipart/form-data">
        <input asp-for="Product.ProductId" hidden />
        <input asp-for="Product.BarCode" hidden />
        <input asp-for="Product.Image" hidden />
        <input asp-for="Product.Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Product.Name"></label>
                    <input asp-for="Product.Name" type="text" class="form-control" placeholder="" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                @if (Model.Product.ProductId != 0)
                {
                    <div class="form-group">
                        <label asp-for="Product.BarCode"></label>
                        <input asp-for="Product.BarCode" type="text" class="form-control" disabled style="color:black" />
                        <span asp-validation-for="Product.BarCode" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="Product.Description"></label>
                    <textarea asp-for="Product.Description" type="text" class="form-control" placeholder=""></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price"></label>
                    <input asp-for="Product.Price" type="number" class="form-control" placeholder="" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.CategoryId"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select" placeholder="">
                        <option disabled selected>請選擇商品類別</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-center">
                    <img class="mt-4 mb-4" src="@Model.Product.Image" width="60%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
                <div class="form-group">
                    <label asp-for="Product.Image"></label>
                    <input type="file" name="file" asp-for="Product.Image" class="file-upload-default" />
                    <div class="input-group col-xs-12 d-flex align-items-center">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image" />
                        <span class="input-group-append ms-2">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                        </span>
                    </div>
                    <span asp-validation-for="Product.Image" class="text-danger"></span>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
                <a asp-area="Purchase" asp-controller="Product" asp-action="Index" class="btn btn-light btn-fw m-3">取消</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}