@model List<Stock>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h2 class="card-title">倉庫基本資料</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-area="Purchase" asp-controller="Stock" asp-action="Upsert" class="btn btn-inverse-primary btn-fw">新增倉庫基本資料</a>
            </div>
        </div>

        <div class="table-responsive py-3">
            <table class="table table-bordered" id="tblData">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>倉庫名稱</th>
                        <th>倉庫電話</th>
                        <th>倉庫負責人</th>
                        <th>負責人手機</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/stock.js"></script>
}
