@model Stock

<div class="card-body">
    <h2 class="card-title">@(Model.StockId == 0 ? "新增" : "修改")倉庫基本資料</h2>
    <form class="py-3" method="post">
        <input asp-for="StockId" hidden />
        <input asp-for="TimeSet" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="form-group">
            <label asp-for="StockName"></label>
            <input asp-for="StockName" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="StockName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StockTel"></label>
            <input asp-for="StockTel" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="StockTel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StockAddress"></label>
            <input asp-for="StockAddress" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="StockAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StockPersonInChange"></label>
            <input asp-for="StockPersonInChange" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="StockPersonInChange" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StockPersonInChangeCellPhone"></label>
            <input asp-for="StockPersonInChangeCellPhone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="StockPersonInChangeCellPhone" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
            <a asp-area="Purchase" asp-controller="Stock" asp-action="Index" class="btn btn-light btn-fw m-3">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}