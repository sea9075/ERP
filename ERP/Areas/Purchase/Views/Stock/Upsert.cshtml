@model Stock

<div class="card-body">
    <h2 class="card-title">@(Model.StockId == 0 ? "新增" : "修改")倉庫基本資料</h2>
    <form class="py-3" method="post">
        <input asp-for="StockId" hidden />
        <input asp-for="Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telephone"></label>
            <input asp-for="Telephone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PersonInChange"></label>
            <input asp-for="PersonInChange" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="PersonInChange" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PersonInChangePhone"></label>
            <input asp-for="PersonInChangePhone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="PersonInChangePhone" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
            <a asp-area="Purchase" asp-controller="Stock" asp-action="Index" class="btn btn-light btn-fw m-3">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}