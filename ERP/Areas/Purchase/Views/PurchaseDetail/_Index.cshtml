@model PurchaseDetailVM


<div class="card">
    <div class="card-body">
    <div class="card-title">
        <h4>進貨單明細</h4>
        <div class="table-responsive py-3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>商品名稱</th>
                        <th>進貨成本</th>
                        <th>數量</th>
                        <th>小計</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.PurchaseDetailList != null)
                    {
                        foreach (var detail in Model.PurchaseDetailList.OrderBy(u => u.PurchaseDetailId))
                        {
                            <tr>
                                <td></td>
                                <td>@detail.ProductId</td>
                                <td>@detail.Cost</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.TotalPrice</td>
                                <td>
                                    <a class="btn btn-primacy" asp-area="Purchase" asp-controller="Purchase" asp-action="Upsert">修改</a>
                                    <a class="btn btn-primacy" asp-area="Purchase" asp-controller="Purchase" asp-action="Delete">修改</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>