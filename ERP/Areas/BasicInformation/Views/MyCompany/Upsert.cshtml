@model MyCompany

<div class="">
    <h2 class="">公司基本資料</h2>
    <form class="py-3" method="post">
        <input asp-for="MyCompanyId" hidden />
        <input asp-for="Timeset" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" hidden />
        <div class="form-group mb-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="TaxNumber"></label>
            <input asp-for="TaxNumber" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="TaxNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PersonInCharge"></label>
            <input asp-for="PersonInCharge" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="PersonInCharge" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Url"></label>
            <input asp-for="Url" type="text" class="form-control" placeholder="" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-fw m-3">確認</button>
            <a asp-area="Guest" asp-controller="Home" asp-action="Index" class="btn btn-secondary">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}