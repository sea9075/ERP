@model List<Customer>


<div class="row">
    <div class="col-6">
        <h2>顧客資料清單</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-area="BasicInformation" asp-controller="Customer" asp-action="Upsert" class="btn btn-primary">新增顧客資料</a>
    </div>
</div>

<div class="table-responsive py-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>NO.</th>
                <th>顧客姓名</th>
                <th>顧客生日</th>
                <th>顧客手機</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var obj in Model.OrderBy(u => u.CustomerId))
            {
                <tr>
                    <td>@index</td>
                    <td>@obj.Name</td>
                    <td>@obj.BirthDate.ToString("yyyy-MM-dd")</td>
                    <td>@obj.CellPhone</td>
                    <td>
                        <a asp-area="BasicInformation" asp-controller="Customer" asp-action="Upsert" asp-route-id="@obj.CustomerId" class="btn btn-primary">修改</a>
                        <form asp-area="BasicInformation" asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.CustomerId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger">刪除</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>
