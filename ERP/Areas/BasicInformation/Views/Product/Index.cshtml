@model List<Product>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h2>商品分類</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-area="BasicInformation" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">新增商品</a>
            </div>
        </div>

        <div class="table-responsive py-3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>商品名稱</th>
                        <th>商品類別</th>
                        <th>商品條碼</th>
                        <th>商品價格</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var obj in Model.OrderBy(u => u.ProductId))
                    {
                        <tr>
                            <td>@index</td>
                            <td>@obj.Name</td>
                            <td>@obj.Category.Name</td>
                            <td>@obj.Barcode</td>
                            <td>@obj.Price</td>
                            <td>
                                <a asp-area="BasicInformation" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.ProductId" class="btn btn-primary">修改</a>
                                <form asp-area="BasicInformation" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-danger">刪除</button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>