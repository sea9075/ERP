@model List<Department>


<div class="row">
    <div class="col-6">
        <h2>商品分類</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-area="BasicInformation" asp-controller="Department" asp-action="Upsert" class="btn btn-primary">新增公司部門</a>
    </div>
</div>

<div class="table-responsive py-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>NO.</th>
                <th>部門名稱</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var obj in Model.OrderBy(u => u.DepartmentId))
            {
                <tr>
                    <td>@index</td>
                    <td>@obj.Name</td>
                    <td>
                        <a asp-area="BasicInformation" asp-controller="Department" asp-action="Upsert" asp-route-id="@obj.DepartmentId" class="btn btn-primary">修改</a>
                        <form asp-area="BasicInformation" asp-controller="Department" asp-action="Delete" asp-route-id="@obj.DepartmentId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger">刪除</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>
